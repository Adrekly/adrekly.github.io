---
interface Props {
  className?: string;
}

const { className = "" } = Astro.props;

const splitClasses = className.split(" ");
---

<div
  class:list={splitClasses}
  class="card rounded-md p-6 w-full max-w-screen-xs border border-gray-300 dark:border-neutral-800 flex flex-col gap-2 bg-white shadow dark:bg-gray-950/30"
>
  <slot />
</div>
